gmd() { 
    git merge --no-commit --no-ff $@
    succ=$?
    git merge --abort
    [ $succ -eq 0 ] && git rebase $@ || git merge $@
}
alias gm='git merge'
alias gr='git rebase'
alias gri='git rebase -i'
