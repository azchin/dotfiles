alias ls='ls --color=auto'
alias ll='ls -lho --time-style=iso --group-directories-first'
alias la='ls -A'
alias lla='ls -lAho --time-style=iso --group-directories-first'
alias lsg='ls | grep'
alias grep='grep --color=auto'
