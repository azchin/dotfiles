# applications

super + x ; super + {Caps_Lock,a,b,e,i,f,g,p,c,d,q,r,s,t,u,z} 
	{ \
	:, \
	alacritty, \
	brave, \
	emacsclient -e "(server-shutdown)"; emacs --daemon, \
	brave -incognito, \
	firefox, \
	midori, \
    pavucontrol, \
	code, \
	pcmanfm, \
	tabbed -c vimb -e, \
	urxvtc -e ranger, \
	st, \
	tor-browser, \
	urxvt, \
	~/bin/zathura.sh \
	}

# screenshot
{super,_} + Print
	maim {_,-s} | xclip -sel clip -t image/png
	#flameshot {gui,full -c} -p ~/screenshots

{super + shift,shift} + Print
	maim {_,-s} ~/images/screenshots/$(date +%+4Y-%m-%d_%H%M%S).png

# wallpaper
super + w; super + {s,a}
	~/bin/wallpaper.sh {_,-r}

super + shift + s
	loginctl suspend

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Volume

XF86Audio{Lower,Raise}Volume
	~/bin/volume.sh {-,+}5
	#pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

shift + XF86Audio{Lower,Raise}Volume
	~/bin/volume.sh {-,+}1

XF86AudioMute
	~/bin/volume.sh mute

# can implement smarter behaviour w/ diff players via dmenu, notification
XF86Audio{Play,Prev,Next}
	~/bin/playerctl.sh {play-pause, previous, next}

# XF86Audio{Play,Prev,Next}
# 	~/bin/media.sh {play,prev,next}

{F3,F4}
	xdotool getactivewindow key '{ctrl+shift+Tab,ctrl+Tab}'

F2
	xdotool getactivewindow click 2

super + {button4,button5}
	~/bin/volume.sh {-,+}1
